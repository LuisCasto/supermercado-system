# ============================================
# Variables de Entorno - Sistema Supermercado
# ============================================
# Copia este archivo a .env y configura tus valores

# ====================================
# Flask Configuration
# ====================================
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# ====================================
# Security Keys
# ====================================
# IMPORTANTE: Cambia estos valores en producci√≥n
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-change-in-production

# ====================================
# PostgreSQL (Fuente de la verdad)
# ====================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=supermercado_db
POSTGRES_USER=app_user
POSTGRES_PASSWORD=apppass123

# ====================================
# MongoDB (Almacenamiento de tickets)
# ====================================
MONGO_HOST=localhost
MONGO_PORT=27018
MONGO_DB=supermercado_sales
MONGO_USER=app_user
MONGO_PASSWORD=apppass123

# ====================================
# Outbox Worker Configuration
# ====================================
OUTBOX_POLL_INTERVAL=60
OUTBOX_BATCH_SIZE=10
OUTBOX_MAX_RETRIES=3

# ====================================
# CORS (Frontend origins)
# ====================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ====================================
# Logging
# ====================================
LOG_LEVEL=INFO
VITE_API_URL=http://localhost:5000/api